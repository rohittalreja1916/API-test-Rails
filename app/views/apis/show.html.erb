<div class="row justify-content-around">
  <% @api_data.each do |data| %>
    <div class="col-sm-6 col-md-4 col-lg-2 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center"><%= data.name %></h5>
          <p class="card-text"><%= data.damageType %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>